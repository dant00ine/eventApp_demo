<h3 class="page-header"><%= @user.name %></h3>
<p><%= @user.email + " " + @user.age.to_s %></p>

<div class="col-md-6">
  <h3>Events Hosting</h3>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Location</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
  <% @eventsOwned.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.location %></td>
        <td><a href="/events/<%= event.id %>">View Event</a></td>
      </tr>
  <% end %>
    </tbody>
  </table>
</div>

<div class="col-md-6">
  <h3>Events Attending</h3>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Location</th>
        <th></th>
      </tr>
    </thead>
    <% @eventsAttended.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.location %></td>
        <td><a href="/events/<%= event.id %>">View Event</a></td>
      </tr>
    <% end %>
  </table>

</div>
