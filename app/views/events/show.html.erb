<h3><%= @event.title %></h3>
<p><%= @event.location %></p>

<% if @members %>
    <table class="table">
        <thead>
            <tr>
              <th>name</th>
              <th>email</th>
              <th>age</th>
              <th></th>
            </tr>
          </thead>

        <tbody>
            <% @members.each do |member| %>
              <tr>
                <td><%= member.name %></td>
                <td><%= member.email %></td>
                <td><%= member.age %></td>
                <td><a href="/users/<%= member.id %>">View</a></td>
              </tr>
            <% end %>
        </tbody>
    </table>
<% end %>

<div id="map">

</div>

<script type="text/javascript">

    var blah = "<%= @event.title %>"

    <% if @event.latitude && @event.longitude %>

        var latitude = <%= @event.latitude %>
        var longitude = <%= @event.longitude %>

        function initMap(){
            var location = { lat: latitude, lng: longitude }
            var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 15,
                center: location
            })
        }

    <% end %>

</script>

<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAWeFVwBDoGC0EWdagAuln09Jc72EtrqTU&callback=initMap">

</script>
